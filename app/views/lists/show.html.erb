<div class="container">

<h2><%= @list.name %></h2>

<p><strong>Bookmarks</strong></p>


<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %>
        <%= link_to "Delete bookmark", bookmark_path(bookmark),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
     </li>
    <div class="card" style="width: 18rem;">
        <%= image_tag(bookmark.movie.poster_url) %> <p class="card-img-top" alt=""></p>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <p class="card-text"><%= bookmark.movie.rating %></p>
        </div>
    </div>
  <% end %>
</ul>
<br>

<%= link_to "Add bookmark", new_list_bookmark_path(@list)  %>
</div>
